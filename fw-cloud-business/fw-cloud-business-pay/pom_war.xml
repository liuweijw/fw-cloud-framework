<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>fw-cloud-business-pay</artifactId>
	<packaging>war</packaging>

    <name>fw-cloud-business-pay</name>
    <description>支付平台服务</description>

    <parent>
    	<groupId>com.github.liuweijw</groupId>
        <artifactId>fw-cloud-business</artifactId>
        <version>${fw.business.version}</version>
    </parent>

    <dependencies>
    	<dependency>
			<groupId>com.github.liuweijw</groupId>
            <artifactId>fw-cloud-business-commons</artifactId>
            <version>${fw.business.version}</version>
		</dependency>
		<dependency>
			<groupId>com.github.liuweijw</groupId>
            <artifactId>fw-cloud-core-commons</artifactId>
            <version>${fw.business.version}</version>
		</dependency>
		<!-- 远程依赖 // https://github.com/liuweijw/cloud-commons.git -->
    	<dependency>
			<groupId>com.github.liuweijw</groupId>
            <artifactId>business-pay-commons</artifactId>
            <version>${business-pay-commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.github.binarywang</groupId>
			<artifactId>weixin-java-pay</artifactId>
			<version>${weixin.business.version}</version>
		</dependency>
    </dependencies>

    <build>
    	<!-- Tomcat ROOT 方式部署 -->
	    <finalName>PAY</finalName>
    	<plugins>
			<plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
			<plugin>
			    <groupId>com.mysema.maven</groupId>
			    <artifactId>apt-maven-plugin</artifactId>
			    <version>1.1.3</version>
			    <executions>
			        <execution>
			            <phase>generate-sources</phase>
			            <goals>
			                <goal>process</goal>
			            </goals>
			            <configuration>
			                <outputDirectory>target/generated-sources</outputDirectory>
			                <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
			            </configuration>
			        </execution>
			    </executions>
			</plugin>
			<!-- 跳过单元测试 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skipTests>true</skipTests>
				</configuration>
			</plugin>
    	</plugins>
    </build>
</project>
